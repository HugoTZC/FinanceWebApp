{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Brave against localhost",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "C:/Program Files/BraveSoftware/Brave-Browser/Application/brave.exe",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ]
    }
  ]
}   